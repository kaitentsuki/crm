{% extends 'base.html.twig' %}

{% block content %}
    <h1>Create Order</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.loyalty_card,  {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_row(form.items,  {'attr': {'class': 'form-control'}}) }}
    </div>

    <input type="submit" class="btn btn-primary">

    {{ form_end(form) }}
{% endblock %}